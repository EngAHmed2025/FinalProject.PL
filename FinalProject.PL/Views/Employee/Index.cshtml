@using FinalProject.DAL.Models

@model IEnumerable<Employee>;


<h1>All Employees</h1>

<br/>
<br/>

<a asp-controller="Employee" asp-action="Create" class="btn alert-primary">Create New Employee</a>

@if (Model.Count() > 0)
{
    
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Address)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.ISActive)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        
               @foreach(var Employee in Model)
                {
                    <tr>
                   <td>@Employee.Name</td>
                   <td>@Employee.Age</td>
                    <td>@Employee.Address</td>
                    <td>@Html.DisplayFor(M => Employee.Salary)</td>
                    <td>@Html.DisplayFor(M => Employee.ISActive)</td>
                    <td>@Employee.Gender</td>
                    <td>@Html.DisplayFor(M => Employee.Email)</td>
                    <partial name="_ButtonPartial" model="Employee.Id"></partial>
                </tr>
                }
      
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
    <h3>There is no Employee</h3>
    </div>
}